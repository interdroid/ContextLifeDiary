<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:maxWidth="36dp" android:maxHeight="36dp" android:scaleType="matrix"
		android:layout_weight="0" android:id="@+id/mood_image" android:src="@drawable/mood_unknown"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"></ImageView>
	<TextView android:layout_weight="10"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_height="wrap_content" android:gravity="center"
		android:text="@string/mood_unknown" android:layout_width="wrap_content"
		android:textColor="@android:color/black"
		android:id="@+id/mood_label" android:layout_gravity="center_vertical"></TextView>

</LinearLayout>
